{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1",
      "handle": "filesystem"
    },
    {
      "src": "/(.*)", 
      "dest": "/api/$1"
    }
  ]
}